#基本桌面设置
update_interval 4.0
out_to_console no
total_run_times 0
background yes
own_window yes
own_window_type desktop
own_window_argb_visual true
own_window_transparent true
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
draw_shades no
draw_outline no
draw_borders no
double_buffer yes
no_buffers yes
alignment top_middle
use_spacer none
minimum_size 1260 50
gap_y 40
if_up_strictness address

#基本字体设置
use_xft yes
xftalpha 0.1
uppercase no
override_utf8_locale yes
font WenQuanYi Micro Hei:size=10
xftfont WenQuanYi Micro Hei:size=10
default_color white
default_shade_color white
default_outline_color black

#图片设置
draw_graph_borders no
show_graph_scale no
show_graph_range no

#mpd 
mpd_host localhost
mpd_port 6600 
music_player_interval 2.0

#其他显示设置
cpu_avg_samples 4
net_avg_samples 2

#LUAbin
lua_load ~/bin/conky_widgets.lua
lua_draw_hook_pre widgets

TEXT
${voffset 85}${goto 125}${hr 2}
${voffset -80}${goto 200}CPU: $cpu%    ${freq} MHz   ${execi 60 sensors | grep "temp1:" | cut -c16-17}°C${goto 400}MEMORY: $memperc%    $swapperc%${goto 560}DISK: ${hddtemp /dev/sda}°C    / ${fs_bar 10,50 /} ${fs_used_perc /}%    /home ${fs_bar 10,50 /home} ${fs_used_perc /home}%${goto 900}BATTERY: $acpiacadapter $battery_percent%
${voffset 25}${goto 200}${font Poky:size=14}p${font WenQuanYi Micro Hei:size=16}WEATHER${goto 460}${font Poky:size=14}H${font WenQuanYi Micro Hei:size=16}MUSIC${goto 700}${font Poky:size=14}w${font WenQuanYi Micro Hei:size=16}NETWORK${goto 920}${font Poky:size=14}S${font WenQuanYi Micro Hei:size=16}PROCESSES${font}
${voffset -70}${font WenQuanYi Micro Hei:size=50}${alignr}${time %l:%M}${font}
