#关闭启动信息和响铃
startup_message off
vbell off

#utf8
defutf8 on

#状态栏
caption always "%{=b g}%-w%{=rb wg} %n %t %{-}%+w"

#动态窗口
hardstatus string "screen: %t"

#退出时刷新窗口
altscreen on

#切换时刷新screen
partial on

#256色支持
term xterm-256color
defbce "on"
    
#快捷键
bindkey "^[[1;3A" prev
bindkey "^[[1;3B" next

#滚屏
termcapinfo xterm* ti@:te@

#启动控制
screen -t irssi bash -i -c "irssi;bash"
screen -t bash
