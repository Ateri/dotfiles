music_directory     "/home/lainme/Music"   #音乐存放目录
playlist_directory  "/home/lainme/Music/mpd"  #播放列表目录
db_file             "/home/lainme/Music/mpd/mpd.db"
log_file            "/home/lainme/Music/mpd/mpd.log"
pid_file            "/home/lainme/Music/mpd/mpd.pid"
state_file          "/home/lainme/Music/mpd/mpd.state"
