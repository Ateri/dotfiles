#!/bin/bash
if [ `uname -o` == "Cygwin" ];then
    if [ -n "$*" ];then
        args=`cygpath -w -- "$*"`
    fi

    if [ $1 == "--new" ];then
        if [ -z "$2" ];then
            args=""
        else
            args=`echo "$args" | cut -d " " -f 2-`
        fi
        cygstart -- /cygdrive/c/software/vim73/gvim.exe -d "$args"
    else 
        /cygdrive/c/software/vim73/gvim.exe -d "$args"
    fi
else
    vimdiff "$*"
fi
